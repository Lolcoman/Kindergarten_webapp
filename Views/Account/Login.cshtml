@model MVCProject.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Přihlášení";
}
<!DOCTYPE html>
<html lang="cs">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/authStyle.css" />
    <title>Přihlášení</title>
    <script defer src="~/js/someeAdsRemove.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
</head>

<body>
    <div class="container">
        <div id="toast-success">Chybné jméno nebo heslo!</div>
        <form id="form" asp-action="Login" method="post">
            <h1>Přihlášení</h1>
            <div class="form-group">
                <label for="UserName" asp-for="UserName" class="control-label">Uživatelské jméno</label>
                <input id="UserName" name="UserName" type="text" asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Password" asp-for="Password">Heslo</label>
                <input id="Password" name="Password" type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <div id="error"></div>
            </div>
            <button type="submit" class="btn">Přihlásit</button>
            <a id="back-link" asp-controller="Home" asp-action="Index">Zpět</a>
            @if (TempData["Message"] != null)
            {
                <script type="text/javascript">
                    window.onload = function ()
                    {
                        @*alert('@Html.Raw(TempData["Message"])')*@
                        var x = document.getElementById("toast-success");
                        x.style.display = "block";
                        setTimeout(function () {
                            x.classList.toggle('fade');
                        }, 2500);
                    };
                </script>
            }
        </form>
    </div>
    @*<script defer src="~/js/authScript.js"></script>*@
</body>

</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}