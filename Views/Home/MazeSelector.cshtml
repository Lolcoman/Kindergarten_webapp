@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Bludiště";
}
<!DOCTYPE html>
<html lang="cs">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bludiště</title>
    <link rel="stylesheet" type="text/css" href="~/css/selectorStyle.css">
    <link type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.7.1.min.js"></script>
    <script defer src="~/js/selectorScript.js"></script>
    <script src="~/js/someeAdsRemove.js"></script>
</head>

<body>
    <form name="myForm" onsubmit="myFunction(); return false;">
        <p id="name">Vytvoření bludiště</p>
        <label class="info" for="start" title="Obrázek začátku v bludišti">Obrázek startu <i class="fa-solid fa-flag-checkered fa-lg"></i></label>
        <label for="start" class="custom-file-upload">
            <i class="fa fa-cloud-upload" aria-hidden="true"></i> Nahrát obrázek
        </label>
        <input type="file" name="start" id="start" accept="image/jpeg, image/png, img/jpg">
        <img id="startPreview" src="#" style="display:none" width="100" height="100" />
        <label class="info" for="finish" title="Obrázek konce v bludišti">Obrázek cíle <i class="fa-solid fa-bullseye fa-lg"></i></label>
        <label for="finish" class="custom-file-upload">
            <i class="fa fa-cloud-upload" aria-hidden="true"></i> Nahrát obrázek
        </label>
        <input type="file" name="finish" id="finish" accept="image/jpeg, image/png, img/jpg">
        <img id="finishPreview" src="#" style="display:none" width="100" height="100" />
        <div class="levels">
            <div class="insideLevels">
                <input type="radio" id="radio-1" name="level" value="100" required>
                <label for="radio-1" class="radio-custom-label"><i class="fa-solid fa-dice-one fa-2xl"></i> Úroveň 1</label>
            </div>
            <div class="insideLevels">
                <input type="radio" id="radio-2" name="level" value="70">
                <label for="radio-2" class="radio-custom-label"><i class="fa-solid fa-dice-two fa-2xl"></i> Úroveň 2</label>
            </div>
            <div class="insideLevels">
                <input type="radio" id="radio-3" name="level" value="50">
                <label for="radio-3" class="radio-custom-label"><i class="fa-solid fa-dice-three fa-2xl"></i> Úroveň 3</label>
            </div>
        </div>
        <input type="submit" value="Hrát">
    </form>
</body>
</html>